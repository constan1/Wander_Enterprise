

@model Wander_Models.ViewModels.DetailsVM

@using Wander_Utilities




<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Inquiry Summary
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-outline-info btn-sm" asp-action="Index">Back to Listings</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Your details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input required type="text" id="FullName" class="form-control" />

                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input  required  type="tel" id="PhoneNumber" placeholder="(416) 111 1111" class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input required  type="text" id="Email" class="form-control" />

                                    </div>
                                </div>


                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>City</label>
                                    </div>
                                    <div class="col-9">
                                        <input required type="text" id="City" class="form-control" />
                                         
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <div class="col-12">
                                        <h4 class="d-flex justify-content-between align-items-center mb-3">
                                            <span class="text-info">Rental Details:</span>
                                        </h4>
                                        <ul class="list-group mb-3">


                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.Property.Name</h6>


                                                    <small class="text-muted">@Model.Property.Address.Street,@Model.Property.Address.City ,@Model.Property.Address.Province </small>

                                                </div>

                                                <span class="text-muted">$@Model.Property.Price/Month</span>

                                            </li>



                                            <li class="list-group-item d-flex justify-content-between bg-light">

                                                <small class="text-muted">Baths: @Model.Property.Baths </small><br />
                                                <small class="text-muted">Beds: @Model.Property.Beds </small>

                                            </li>

                                        </ul>

                                    </div>

                                </div>
                                


                                <div class="container">
                                    <div>
                                        <img src="https://wander.blob.core.windows.net/propertyimages/User @Model.Property.Id/@Model.Property.Main_Image" width="350" alt="">
                                    </div>
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">

                        <div class="col-12 col-md-5 offset-md-7">
                            <button type="submit" onclick="validateInput()" class="btn btn-green form-control" id="submit-button">Submit Inquiry</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>



@section Scripts{
    <partial name="_ValidationScriptsPartial" />

    <script>
        function validateInput() {
            var app_name = document.getElementById("FullName").value;
            var app_phone = document.getElementById("PhoneNumber").value;
            var app_Email = document.getElementById("Email").value;
            var app_City = document.getElementById("City").value;
           

            if (app_name.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                    footer: 'Please enter full Name!'
                })

                return false;
            }
            if (app_phone.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                    footer: 'Please enter phone number'
                })
                return false
            }
            if (app_Email.toString() == '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong!',
                    footer: 'please enter Email'
                })
                return false
            }
           
            return true;
        }

    </script>
} 