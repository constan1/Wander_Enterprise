@model IEnumerable<Wander_Models.Address>

<div class="container p-3 bg-white">

    <div class="row pt-4">

        <div class="col-6">
            <h2 class="text-dark">Address List</h2>

        </div>
        <div class="col-6">
            <a asp-controller="Address" asp-action="Create" class="btn btn-primary-navy">
                <i class="fas fa-plus"></i>
                &nbsp; Create Address

            </a>
        </div>
    </div>

    <br /><br />



    @if (Model.Count() > 0)
    {

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>

                <tr>
                    <th>
                        Street
                    </th>

                    <th>
                        City
                    </th>
                    <th>
                        Province
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Street</td>
                        <td width="30%">@obj.City</td>
                        <td width="30%">@obj.Province</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Address" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fas fa-edit"></i> &nbsp;  Edit
                                </a>
                                <a asp-controller="Address" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fas fa-trash-alt"></i> &nbsp;  Delete
                                </a>

                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Address Exists</p>

    }
</div>