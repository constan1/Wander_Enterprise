@model Wander_Models.ViewModels.PropertyVM
@using Wander_Utilities

@{
    var title = "Create Product";


}
<form method="post" enctype="multipart/form-data">


    @if (Model.Property.Id != 0)
    {
        title = "Edit Product";
        <input asp-for="Property.Id" hidden />
    }

    <div class="border p-3 bg-white">
        <div asp-validation-summary="All" class="text-black-50 danger"></div>
        <div class="form-group row">
            <h2 class="test-info pl-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Property.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Property.Name" class="form-control" />
                        <span asp-validation-for="Property.Name" class="test-info danger">


                        </span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Property.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Property.Description" class="form-control" />
                        <span asp-validation-for="Property.Description" class="text danger">

                        </span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Property.Baths"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Property.Baths" class="form-control" />
                        <span asp-validation-for="Property.Baths" class="text danger">

                        </span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Property.Beds"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Property.Beds" class="form-control" />
                        <span asp-validation-for="Property.Beds" class="text danger">

                        </span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Property.Description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Property.Description" class="form-control" />
                        <span asp-validation-for="Property.Description" class="text danger">

                        </span>
                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label></label>
                    </div>
                    <div class="col-8">
                        <select class="form-select" name="value">
                            <option value="@Model.Type_[0]">@Model.Type_[0]</option>
                            <option value="@Model.Type_[1]">@Model.Type_[1]</option>
                            <option value="@Model.Type_[2]">@Model.Type_[2]</option>
                            <option value="@Model.Type_[2]">@Model.Type_[3]</option>
                            <option disabled selected>--Select Category--</option>
                        </select>

                    </div>

                </div>
                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Property.AddressId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Property.AddressId" asp-items="@Model.AddressList" class="form-select">
                            <option disabled selected>--Select Category--</option>
                        </select>
                        <span asp-validation-for="Property.AddressId" class="text danger">

                        </span>
                    </div>

                </div>

                <div class="form-group row py-2">
                    <div class="col-4">
                        <label asp-for="Property.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Property.Price" class="form-control" />
                        <span asp-validation-for="Property.Price" class="text danger">

                        </span>
                    </div>

                </div>

                <input type="submit" class="btn btn-primary w-100" />


            </div>

        </div>
    </div>
</form>
